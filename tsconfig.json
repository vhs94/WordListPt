{
  "compilerOptions": {
      "lib": [
          "es6",
          "es2015",
          "dom"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
          "*": [
              "types/*"
          ]
      },
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": false,
      "sourceMap": true,
      "types": [
          "node"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true
  }
}